<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OtpLayout">
        <attr name="numberOtp" format="integer" />
        <attr name="colorBackground" format="color" />
        <attr name="colorText" format="color" />
        <attr name="shapeOtp" format="reference" />
        <attr name="sizeOtp" format="dimension" />
        <attr name="textStyleOtp" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
    </declare-styleable>
</resources>